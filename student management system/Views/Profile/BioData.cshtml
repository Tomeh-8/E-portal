@model IEnumerable<student_management_system.Models.Student>

@{
    ViewData["Title"] = "BioData";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>BioData</h1>


<table class="table">
    <tbody>
        @foreach (var item in Model)
         {
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.StateOfOrigin)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.StateOfOrigin)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nationality)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Nationality)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
            </tr>
            <tr>
                 <td>

                     
                     @if (item.Nationality == null)
                     {
                         <p>
                             <a asp-action="CreateBioData">Create New</a>
                         </p>
                     }
                     else
                     {
                         <a asp-action="EditBioData" asp-route-id="@item.StudentId">Edit</a>
                     }

                 </td>
             </tr> 
         }
    </tbody>
</table>
